<% if(success && success.length) { %>
<div
  class="alert alert-success my-2 col-8 offset-2 alert-dismissible fade show"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if(error && error.length) { %>
<div
  class="alert alert-danger my-2 col-8 offset-2 alert-dismissible fade show"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %>
