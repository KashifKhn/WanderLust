<% layout('layouts/boilerPlate') -%>
<h1>All Listing</h1>
<div class="row w-100 row-cols-lg-3 row-cols-md-2 row-cols-1">
  <% for(let listing of allListing) { %>
  <a href="/listings/<%= listing._id  %>" class="text-decoration-none">
    <div class="card col border-0 mb-3">
      <img
        src="<%=listing.image.url %>"
        class="card-img-top rounded w-100 object-fit-cover"
        alt="<%=listing.image.filename %>"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> </b>
          <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
